node{
    stage("Git CheckOut"){
        git url: 'https://github.com/sravani-venkat/spring-boot-mongo-docker.git',branch: 'master'
    }
    
    stage(" Maven Clean Package"){
      def mavenHome =  tool name: "Maven3.8.4", type: "maven"
      def mavenCMD = "${mavenHome}/bin/mvn"
      sh "${mavenCMD} clean package"
    } 
    
    stage("Build Docker Image") {
         sh "docker build -t sravanidockerhub/spring-boot-mongo-image:${BUILD_NUMBER} ."
    }
    
    stage("Docker Push"){
       withCredentials([string(credentialsId: 'newdockerpwd', variable: 'newdockerpwd')]) {
          sh "docker login -u sravanidockerhub -p ${newdockerpwd}"
          sh "docker push sravanidockerhub/spring-boot-mongo-image:${BUILD_NUMBER}"
        }
    }
    
    // Remove local image in Jenkins Server
    stage("Remove Local Image"){
        sh "docker rmi -f sravanidockerhub/spring-boot-mongo-image"
    }
    
    stage("Update image tag in compose file"){
        sh "sed -i s/BUILD_TAG/${BUILD_NUMBER}/g docker-compose.yml"
        }


    stage("Deploy to docker container"){
        sshagent(['dockerserverSSH']) {
    	    sh 'scp -o StrictHostKeyChecking=no docker-compose.yml ubuntu@13.233.100.132:'
		    sh 'ssh -o StrictHostKeyChecking=no ubuntu@13.233.100.132 docker-compose up -d'
        }
    }
}
